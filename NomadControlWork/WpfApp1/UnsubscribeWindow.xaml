<Window x:Class="WpfApp1.UnsubscribeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="UnsubscribeWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Background="SlateGray" Grid.ColumnSpan="4" Margin="0,0,-0.4,0">
            <Grid Height="40" Background="DeepSkyBlue">
                <TextBlock Text="Journal" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"></TextBlock>
            </Grid>
            <Grid Height="100"></Grid>
            <Grid Height ="20">
                <TextBlock Text="Введите имя:" Height="20" FontSize="15" FontStyle="Normal" Foreground ="WhiteSmoke" HorizontalAlignment="Center"></TextBlock>
            </Grid>
            <Grid Height ="50">
                <TextBox Name="nameText" TextWrapping="Wrap" Height="30" Width="180"> </TextBox>
            </Grid>
            <Grid Height ="50">
                <Button Name="UnsubscribeButton" Content="Я уверен, хочу отписаться" Width="180" Height="30" IsDefault="True" Click="UnsubscribeButtonForDatabase"></Button>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
